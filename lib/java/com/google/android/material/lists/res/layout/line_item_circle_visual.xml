<!--When viewing the circular visual in a layout preview, it sometimes appears incorrectly,
however it correctly cuts off the corners when rendered in a real app.
-->
<com.google.android.material.imageview.ShapeableImageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/material_list_item_visual"
    android:layout_width="@dimen/material_list_item_medium_visual_size"
    android:layout_height="@dimen/material_list_item_medium_visual_size"
    android:layout_marginEnd="16dp"
    app:shapeAppearance="@style/ShapeAppearanceOverlay.Circular"
    tools:background="@color/placeholder_content" /><!-- Layout preview does not work for this view, but it still renders properly. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mtrl_list_item_three_line_height"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/mtrl_list_item_side_padding"
    android:paddingEnd="@dimen/mtrl_list_item_side_padding">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/mtrl_list_item_item_padding">

        <include layout="@layout/line_item_square_visual" />
    </FrameLayout>

    <include layout="@layout/three_line_text" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/mtrl_list_item_item_padding">

        <include layout="@layout/line_item_secondary_action" />
    </FrameLayout>

</LinearLayout>

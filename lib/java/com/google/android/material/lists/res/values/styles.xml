<resources>
  <declare-styleable name="MaterialViewHolder">

    <attr name="visualShapeAppearance" format="reference" />
    <attr name="visualShapeAppearanceOverlay" format="reference" />
    <attr name="visualSize" format="enum">
      <enum name="icon" value="0" />
      <enum name="regular" value="1" />
      <enum name="large" value="2" />
    </attr>

    <attr name="overlineTextAppearance" format="reference" />
    <attr name="primaryTextAppearance" format="reference" />
    <attr name="secondaryTextAppearance" format="reference" />
    <attr name="metadataTextAppearance" format="reference" />
  </declare-styleable>

  <style name="Widget.MaterialComponents.MaterialViewHolder" parent="android:Widget">
    <item name="visualShapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    <item name="visualShapeAppearanceOverlay">@null</item>

  </style>

  <attr name="materialViewHolderStyle" format="reference" />
</resources>
